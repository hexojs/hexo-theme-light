<% if (item.link){ %>
  <% if (item.title){ %>
    <h1 class="title"><a href="<%- item.link %>" target="_blank"><%= item.title %></a></h1>
  <% } else { %>
    <h1 class="title"><a href="<%- item.link %>" target="_blank"><%= item.link %></a></h1>
  <% } %>
<% } else { %>
  <% if (index){ %>
    <h1 class="title"><a href="<%- url_for(item.path) %>"><%= item.title %></a></h1>
  <% } else { %>
    <h1 class="p-name title" itemprop="headline name"><%= item.title %></h1>
  <% } %>
<% } %>